@model MemberLoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLoginRegisterForgot.cshtml";
}

<!-- Log In Section Start -->
<div class="login-section">
    <div class="materialContainer">
        <div class="box">
            <form method="post">
            <div class="login-title">
                <h2>Login</h2>
            </div>
            <div class="input">
                <label for="name">Username*</label>
                <input asp-for="UserName" id="name">
                <span class="text-danger" asp-validation-for="UserName"></span>
                <span class="spin"></span>
                <div class="valid-feedback">
                    Please fill The Username
                </div>
            </div>
            <div class="input">
                <label for="pass">Password</label>
                <input asp-for="Password"  id="pass">
                <span class="text-danger" asp-validation-for="Password"></span>
                <span class="spin"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>

            <a asp-controller="account" asp-action="forgot" class="pass-forgot">Forgot your password?</a>

            <div class="button login">
                <button type="submit">
                    <span>Log In</span>
                    <i class="fa fa-check"></i>
                </button>
            </div>

            <p class="sign-category">
                <span>Or sign in with</span>
            </p>

            <div class="row gx-md-3 gy-3">
                <div class="col-md-6">
                    <a href="www.facebook.html">
                        <div class="social-media fb-media">
                            <img src="~/assets/images/inner-page/facebook.png" class="img-fluid blur-up lazyload"
                                 alt="">
                            <h6>Facebook</h6>
                        </div>
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="www.gmail.html">
                        <div class="social-media google-media">
                            <img src="~/assets/images/inner-page/google.png" class="img-fluid blur-up lazyload"
                                 alt="">
                            <h6>Google</h6>
                        </div>
                    </a>
                </div>
            </div>

            <p>Not a member? <a asp-action="register" asp-controller="account" class="theme-color">Sign up now</a></p>
            </form>
        </div>
    </div>
</div>
<!-- Log In Section End -->

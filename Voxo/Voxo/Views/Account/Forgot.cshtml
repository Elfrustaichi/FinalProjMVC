@model ForgotViewModel
@{
    ViewData["Title"] = "Forgot";
    Layout = "~/Views/Shared/_LayoutLoginRegisterForgot.cshtml";
}
<!-- Forgot Section Start -->
<div class="login-section">
    <div class="materialContainer">
        <div class="box">
            <form method="post">
            <div class="login-title">
                <h2>Forgot Password</h2>
            </div>
            <div class="input">
                <label for="emailname">Enter Email Address</label>
                <input asp-for="Email" class="is-invalid" id="emailname">
                <span class="spin"></span>
            </div>
            <div class="button login button-1">
                <button type="submit">
                    <span>Send</span>
                    <i class="fa fa-check"></i>
                </button>
            </div>
            </form>
        </div>
    </div>
</div>
<!-- Forgot Section End -->


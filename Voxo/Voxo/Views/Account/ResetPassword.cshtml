@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLoginRegisterForgot.cshtml";
}
<!-- Sign Up Section Start -->
<div class="login-section">
    <div class="materialContainer">
        <div class="box">
            <form method="post">
                <div class="login-title">
                    <h2>Reset Password</h2>
                </div>
                <div class="input">
                    <label for="password">Password</label>
                    <input asp-for="Password" id="password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <span class="spin"></span>
                </div>
                <div class="input">
                    <label for="confirmpassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" id="confirmpassword">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    <span class="spin"></span>
                </div>
                <input hidden asp-for="Token" value="@ViewBag.Token" />
                <input hidden asp-for="Email" value="@ViewBag.Email" />

                <div class="button login">
                    <button type="submit">
                        <span>Reset password</span>
                        <i class="fa fa-check"></i>
                    </button>
                </div>

                <p class="sign-category">
                    <span>Or sign up with</span>
                </p>

                <div class="row gx-md-3 gy-3">
                    <div class="col-md-6">
                        <a href="www.facebook.html">
                            <div class="social-media fb-media">
                                <img src="~/assets/images/inner-page/facebook.png" class="img-fluid blur-up lazyload"
                                     alt="">
                                <h6>Facebook</h6>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="www.gmail.html">
                            <div class="social-media google-media">
                                <img src="~/assets/images/inner-page/google.png" class="img-fluid blur-up lazyload"
                                     alt="">
                                <h6>Google</h6>
                            </div>
                        </a>
                    </div>
                </div>
                <p><a href="log-in.html" class="theme-color">Already have an account?</a></p>
            </form>
        </div>
    </div>
</div>
<!-- Sign Up Section End -->

        <div class="slick-2 dot-dark">
            @foreach (var sld in Model.Sliders)
            {
                <div>
                    <div class="home-slider">
                        <div class="home-wrap row m-0">
                            <div class="col-xxl-3 col-lg-4 p-0 d-lg-block d-none">
                                <div class="home-left-wrapper">
                                    <div>
                                        <h2>@sld.Product.Name</h2>

                                        <div class="d-flex">
                                            <ul class="rating p-0 me-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <li>
                                                        <i class="fas fa-star @(sld.Product.Rate>=i?"theme-color":"")"></i>
                                                    </li>
                                                }
                                              
                                            </ul>
                                            <h6 class="text-light">( @sld.Product.ProductReviews.Count() Reviews )</h6>
                                        </div>

                                        <p>
                                            @sld.Product.Description

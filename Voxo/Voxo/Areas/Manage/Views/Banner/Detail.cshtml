@model Banner
 <!-- tracking section start -->
<div class="page-body">
    <div class="title-header title-header-block package-card">
        <div>
            <h5>Banner #@Model.Id</h5>
        </div>
        <div class="card-order-section">
            <ul>
                <li>Banner Type: <h4 class="text-success">@Model.Type</h4></li>
            </ul>
        </div>
    </div>

    <!-- tracking table start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="bg-inner cart-section order-details-table">
                            <div class="row g-4">
                                <div class="col-xl-12">
                                    <div class="table-responsive table-details">
                                        <table class="table cart-table table-borderless">
                                            <thead>
                                                <tr>
                                                    <th colspan="2">Banner details</th>
                                                    <th class="text-end" colspan="2">
                                                        <a asp-action="edit" asp-route-id="@Model.Id"
                                                           class="theme-color">
                                                            Edit
                                                            Banner
                                                        </a>
                                                    </th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr class="table-order">
                                                    <td>
                                                        <p>Banner Image</p>
                                                        <a href="javascript:void(0)">
                                                            <img src="~/uploads/BannerImages/@Model.BackgroundImageName"
                                                                 class="img-fluid blur-up lazyload" >
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <p>Header</p>
                                                        <h5>@Model.Header</h5>
                                                    </td>
                                                    <td>
                                                        <p>Ultra banner second header</p>
                                                        <h5>@(Model.UltraBannerSecondHeader??"null")</h5>
                                                    </td>
                                                    <td>
                                                        <p>Offer</p>
                                                        <h5>@(Model.Offer??"null")</h5>
                                                    </td>
                                                </tr>

                                                <tr class="table-order">
                                                    <td>
                                                        <p>Discount Text</p>
                                                        <h5>@(Model.DiscountText ?? "null")</h5>
                                                    </td>
                                                    <td>
                                                        <p>Price</p>
                                                        <h5>@(Model.Price.ToString("0.00"))</h5>
                                                    </td>
                                                    <td>
                                                        <p>Type</p>
                                                        <h5>@(Model.Type ?? "null")</h5>
                                                    </td>
                                                    <td>
                                                        <p>Offer time</p>
                                                        <h5>@(Model.OfferTime)</h5>
                                                    </td>
                                                </tr>

                                                <tr class="table-order">
                                                    <td>
                                                        <p>Button Url</p>
                                                        <h5>@(Model.ButtonUrl ?? "null")</h5>
                                                    </td>
                                                    <td>
                                                        <p>Button text</p>
                                                        <h5>@(Model.ButtonText ?? "null")</h5>
                                                    </td>
                                                    <td>
                                                        <p>Description</p>
                                                        <h5>@(Model.Description ?? "null")</h5>
                                                    </td>
                                                    <td>
                                                        <p>Size</p>
                                                        <h5>@(Model.Size ?? "null")</h5>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- section end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tracking table end -->

    <div class="container-fluid">
        <!-- footer start-->
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2021 © Voxo E-commerce website by Elfrustaichi.All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>
</div>
<!-- tracking section End -->
@model Category
<div class="page-body">
    <div class="title-header">
        <h5>Edit Category</h5>
    </div>

    <!-- New User start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="pills-home-tab"
                                                data-bs-toggle="pill" data-bs-target="#pills-home"
                                                type="button">
                                            Category Edit
                                        </button>
                                    </li>
                                </ul>
                                <form enctype="multipart/form-data" method="post" id="userCreate" class="theme-form theme-form-2 mega-form">
                                    <div class="tab-content" id="pills-tabContent">
                                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel">

                                            <div class="card-header-1">
                                                <h5>Category Information</h5>
                                            </div>

                                            <div class="row">
                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-lg-2 col-md-3 mb-0">
                                                        Category Name
                                                    </label>
                                                    <div class="col-md-9 col-lg-10">
                                                        <input asp-for="Name" class="form-control" type="text">
                                                        <span class="text-danger" asp-validation-for="Name"></span>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-sm-2 col-form-label form-label-title">
                                                        Category Tag
                                                    </label>
                                                    <div class="col-sm-10">
                                                        <select asp-for="CategoryTag" class="js-example-basic-single w-100">
                                                            <option disabled>Static Menu</option>
                                                            <option value="New">New</option>
                                                            <option value="Old">Old</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-sm-2 col-form-label form-label-title">Photo</label>
                                                    <div class="col-sm-10">
                                                        <input asp-for="CategoryImage" class="form-control form-choose" type="file"
                                                               id="formFileMultiple">
                                                        <span class="text-danger" asp-validation-for="CategoryImage"></span>

                                                    </div>
                                                </div>
                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-sm-2 col-form-label form-label-title">Photo right now!</label>
                                                    <div class="col-sm-10">

                                                        <img src="~/uploads/CategoryImages/@Model.BackgroundImageName" style="width:100px" class="img-fluid"
                                                             alt="">

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                </form>
                                <button type="submit" form="userCreate" class="align-items-center btn btn-theme">
                                    <i data-feather="edit-2"></i>Edit Category
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- New User End -->
    <!-- footer start -->
    <div class="container-fluid">
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2021 © Voxo E-commerce website by Elfrustaichi.All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>
    <!-- footer end -->
</div>
<!-- Page Sidebar End -->
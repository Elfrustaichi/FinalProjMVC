@model PaginatedList<ProductReview>
<!-- product review section start -->
<div class="page-body">
    <div class="title-header">
        <div>
            <h5>Product Reviews</h5>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <!-- Table Start -->
                    <div class="card-body">
                        <div>
                            <div class="table-responsive table-desi">
                                <table class="user-table ticket-table review-table table table-striped">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Customer Name</th>
                                            <th>Product Name</th>
                                            <th>Rating</th>
                                            <th>Comment</th>
                                            <th>Published</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.AppUser.Fullname</td>
                                                <td>@item.Product.Name</td>
                                                <td>
                                                    <ul class="rating">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <li>
                                                                <i class="fas fa-star @(item.Rate<=i?"theme-color":"")"></i>
                                                            </li>
                                                        }
                                                    </ul>
                                                </td>
                                                <td>@item.ReviewText</td>
                                                <td class="td-check">
                                                    <span class="lnr @(item.IsPublised==true?"lnr-checkmark-circle":"lnr-cross-circle")"></span>
                                                </td>
                                                <td>
                                                    <ul>
                                                        <li>
                                                            <a class="edit-btn-alert" asp-action="detail" asp-route-id="@item.Id">
                                                                <span class="lnr lnr-eye"></span>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a class="edit-btn-alert" asp-action="edit" asp-route-id="@item.Id">
                                                                <span class="lnr lnr-pencil"></span>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a class="delete-btn-alert" asp-action="delete" asp-route-id="@item.Id">
                                                                <i class="far fa-trash-alt theme-color"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Table End -->
                    <!-- Pagination Box Start -->
                    <div class="pagination-box">
                        <nav class="ms-auto me-auto " aria-label="...">
                            <ul class="pagination pagination-primary">
                                <li class="page-item @(Model.HasPrev==true?"":"disabled")">
                                    <a class="page-link" asp-action="index" asp-route-page="@(Model.PageIndex-1)">Previous</a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPage; i++)
                                {
                                    <li class="page-item @(i==Model.PageIndex?"active":"")">
                                        <a class="page-link" asp-action="index" asp-route-page="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.HasNext==true?"":"disabled")">
                                    <a class="page-link" asp-action="index" asp-route-page="@(Model.PageIndex+1)">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <!-- Pagination Box End -->
                </div>
            </div>
        </div>
    </div>

    <!-- Container-fluid Ends-->

    <div class="container-fluid">
        <!-- footer start-->
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2021 © Voxo theme by pixelstrap</p>
                </div>
            </div>
        </footer>
    </div>
</div>
<!-- product review section End -->
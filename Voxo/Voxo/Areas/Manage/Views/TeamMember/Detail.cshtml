@model TeamMember
<!-- tracking section start -->
<div class="page-body">
    <div class="title-header title-header-block package-card">
        <div>
            <h5>Team member #@Model.Id</h5>
        </div>
        <div class="card-order-section">
            <ul>
                <li>Profession <h4 class="text-success">@Model.Profession</h4></li>
            </ul>
        </div>
    </div>

    <!-- tracking table start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="bg-inner cart-section order-details-table">
                            <div class="row g-4">
                                <div class="col-xl-8">
                                    <div class="table-responsive table-details">
                                        <table class="table cart-table table-borderless">
                                            <thead>
                                                <tr>
                                                    <th colspan="2">Member Information</th>
                                                    <th class="text-end" colspan="2">
                                                        <a asp-action="edit" asp-route-id="@Model.Id"
                                                           class="theme-color">
                                                            Edit
                                                            Team Member
                                                        </a>
                                                    </th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr class="table-order">
                                                    <td>
                                                        <a href="javascript:void(0)">
                                                            <img src="~/uploads/TeamMemberImages/@Model.ImageName"
                                                                 class="img-fluid blur-up lazyload" alt="">
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <p>Fullname</p>
                                                        <h5>@Model.Fullname</h5>
                                                    </td>
                                                    <td>
                                                        <p>Profession</p>
                                                        <h5>@Model.Profession</h5>
                                                    </td>
                                                    <td>
                                                        <p>Rate</p>
                                                        <h5>@Model.Rate</h5>
                                                    </td>
                                                </tr>

                                                <tr class="table-order">
                                                    <td>
                                                        <p>Own website</p>
                                                        <h5>@(Model.OwnWebsite??"null")</h5>
                                                    </td>

                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="col-xl-4">
                                    <div class="order-success">
                                        <div class="row g-4">

                                            <div class="payment-mode">
                                                <h4>Comment</h4>
                                                <p>
                                                    @(Model.Comment??"null")
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- section end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tracking table end -->

    <div class="container-fluid">
        <!-- footer start-->
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2021 © Voxo E-commerce website by Elfrustaichi.All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>
</div>
<!-- tracking section End -->
